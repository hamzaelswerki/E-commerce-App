<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceKotlin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonLogin" parent="android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="android:background">@drawable/bc_red</item>
    </style>

    <style name="textViewLoginStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="editeTextLoginStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/quicksand_bold</item>
        <item name="paddingStart">23dp</item>
        <item name="paddingEnd">23dp</item>
        <item name="background">@drawable/ic_bc_login</item>
    </style>
</resources>